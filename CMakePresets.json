{
  "version": 7,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 27
  },
  "configurePresets": [
    {
      "name": "x64-base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "x64-linux",
      "hidden": true,
      "inherits": "x64-base",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "x64-linux-intel-dpcpp",
      "hidden": true,
      "inherits": "x64-linux",
      "cacheVariables": {
        "SYCL_IMPLEMENTATION": "Intel OneAPI",
        "CMAKE_C_COMPILER": "icx",
        "CMAKE_CXX_COMPILER": "icpx"
      }
    },
    {
      "name": "x64-linux-intel-dpcpp-debug",
      "displayName": "Intel OneAPI Debug (x64 - Linux)",
      "hidden": false,
      "inherits": "x64-linux-intel-dpcpp",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "x64-linux-intel-dpcpp-release",
      "displayName": "Intel OneAPI Release (x64 - Linux)",
      "hidden": false,
      "inherits": "x64-linux-intel-dpcpp",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    { "name": "x64-base", "hidden": true, "verbose": true },
    {
      "name": "x64-base-linux",
      "hidden": true,
      "inherits": "x64-base",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "x64-linux-intel-dpcpp-debug",
      "displayName": "Intel OneAPI Debug Build (x64 - Linux)",
      "hidden": false,
      "inherits": "x64-base-linux",
      "configurePreset": "x64-linux-intel-dpcpp-debug"
    },
    {
      "name": "x64-linux-intel-dpcpp-release",
      "displayName": "Intel OneAPI Release Build (x64 - Linux)",
      "hidden": false,
      "inherits": "x64-base-linux",
      "configurePreset": "x64-linux-intel-dpcpp-release"
    }
  ]
}
